    "express": "^4.17.0",
    "firebase": "^6.0.2",
    "firebase-admin": "~7.0.0",
    "firebase-functions": "^2.3.0",
    "nuxt": "^2.4.0",
    "nuxt-property-decorator": "^2.1.3",
    "ts-node": "^8.1.0",
    "vuex-class-component": "^1.6.0"
  },
  "devDependencies": {
    "@nuxt/typescript": "^2.7.1",
    "@types/express": "^4.16.1",
    "firebase-functions-test": "^0.1.6",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "private": true
}
